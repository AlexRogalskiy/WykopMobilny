<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/padding_dp_normal"
            android:paddingRight="@dimen/padding_dp_normal"
            android:paddingTop="@dimen/padding_dp_normal"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="?attr/textSizeLarge" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/padding_dp_normal"
            android:paddingLeft="@dimen/padding_dp_normal"
            android:paddingRight="@dimen/padding_dp_normal"
            android:paddingTop="@dimen/padding_dp_mini"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="?attr/textSizeNormal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comment_menu_copy"
            style="@style/BottomSheetMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="?attr/bottomSheetCopy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
                android:text="@string/copy_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_menu_report"
            style="@style/BottomSheetMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="?attr/bottomSheetReport" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
                android:text="@string/report" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_menu_edit"
            style="@style/BottomSheetMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="?attr/bottomSheetEdit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
                android:text="@string/edit_comment" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_menu_delete"
            style="@style/BottomSheetMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="?attr/bottomSheetDelete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/bottomsheet_item_textview_margin_left"
                android:text="@string/delete" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>