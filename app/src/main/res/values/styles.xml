<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Dark" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/cardList.Dark</item>
        <item name="android:itemBackground">@color/cardList.Dark</item>
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
        <item name="colorAccent">@color/colorAccent.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardListColor">@color/cardList.Dark</item>
        <item name="cardViewColor">@color/cardView.Dark</item>
        <item name="spacerColor">@color/spacerColor.Dark</item>
        <item name="drawablesColor">@color/drawablesColor.Dark</item>
        <item name="mikroblogControlsColor">@color/mikroblogControlsColor.Dark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationDrawerNotificationItem">
        <item name="android:layout_margin">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">0</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
